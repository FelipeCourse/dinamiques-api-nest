  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "husky:prepare": "husky install",
    "lint": "eslint {src,test}/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "lint:fix:staged": "eslint --fix",
    "prettier": "prettier {src,test}/**/*.ts",
    "prettier:format": "npm run prettier -- --write",
    "prettier:format:staged": "prettier --write",
    "test": "jest --passWithNoTests --verbose --colors --runInBand --no-cache",
    "test:unit": "npm test -- --config ./jest-unit.config.js",
    "test:unit:ci": "npm test -- --config ./jest-unit.config.js",
    "test:integration": "npm test -- --config ./jest-integration.config.js",
    "test:integration:ci": "npm test -- --config ./jest-integration.config.js",
    "test:e2e": "npm test -- --config ./jest-e2e.config.js",
    "test:e2e:ci": "npm test -- --config ./jest-e2e.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:generate": "prisma generate --schema=./src/shared/infrastructure/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.19.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.0.0",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.5",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.0.0",
    "prisma": "^5.19.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
